@model IEnumerable<DataManager.ViewModels.AppRatingViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>App Ratings</h2>

<table class="table">
    <tr>
        <th>
            Platform
        </th>
        <td>
            Average
        </td>
        <td>
            # Votes
        </td>
        <td align="center">*</td>
        <td align="center">**</td>
        <td align="center">***</td>
        <td align="center">****</td>
        <td align="center">*****</td>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceOS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfVotes)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.OneStar)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.TwoStar)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.ThreeStar)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.FourStar)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.FiveStar)
        </td>
    </tr>
}

</table>
